@page
@model Exercises.Pages.Lesson1.Exercise2

@{
    Layout = null;
}

@{
    string url = "?";
    //maak hier de juiste url
    foreach (var direction in Model.Directions)
    {
        url += "&directions=" + direction;
    }
}

<!-- voeg zelf de andere richtingen toe -->
<a href="@url&directions=Left">Left</a>
<a href="@url&directions=Right">Right</a>  <!--toegevoegd-->

<hr>
<a href="?">Clear</a>
<hr>

<ul id="route">
    @foreach (var direction in Model.Directions)
    {
        switch(direction)
        {
            case Exercise2.Direction.Left: 
                <li>Left</li>
                break;
            case Exercise2.Direction.Right: //toegevoegd
                <li>Right</li>
                break;
                    
            //voeg de andere richtingen toe!
        } 
    }
</ul>
